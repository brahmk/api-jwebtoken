{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "function": "api"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "functions": {
    "source": "functions",
    "runtime": "16"
  },

  "emulators": {
    "hosting": {
      "host": "localhost",
      "port": "5050"
    },

    "functions": {
      "port": 5080,
      "host": "localhost"
    }
  }
}
